<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zxcamera="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/dual_camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/camera_layout_L"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/camera_select_bg"
                android:focusable="true">

                <com.serenegiant.widget.UVCCameraTextureView
                    android:id="@+id/camera_view_L"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    />

                <ImageView
                    android:id="@+id/frame_image_L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/camera_view_L"
                    android:layout_alignLeft="@+id/camera_view_L"
                    android:layout_alignRight="@+id/camera_view_L"
                    android:layout_alignTop="@+id/camera_view_L"
                    />

                <TextView
                    android:id="@+id/camera_open_promate_L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/open_devices_promate"
                    android:textColor="@color/CORNSILK"
                    android:textSize="24sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/camera_layout_R"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/camera_select_bg"
                android:focusable="true">

                <com.serenegiant.widget.UVCCameraTextureView
                    android:id="@+id/camera_view_R"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/frame_image_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/camera_view_R"
                    android:layout_alignLeft="@+id/camera_view_R"
                    android:layout_alignRight="@+id/camera_view_R"
                    android:layout_alignTop="@+id/camera_view_R"
                    />

                <TextView
                    android:id="@+id/camera_open_promate_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/open_devices_promate"
                    android:textColor="@color/CORNSILK"
                    android:textSize="24sp"
                    />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/dual_camera_view_level_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/L2_camera_layout_L"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/camera_select_bg"
                android:focusable="true">

                <com.serenegiant.widget.UVCCameraTextureView
                    android:id="@+id/L2_camera_view_L"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    />

                <ImageView
                    android:id="@+id/L2_frame_image_L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/L2_camera_view_L"
                    android:layout_alignLeft="@+id/L2_camera_view_L"
                    android:layout_alignRight="@+id/L2_camera_view_L"
                    android:layout_alignTop="@+id/L2_camera_view_L"
                    />

                <TextView
                    android:id="@+id/L2_camera_open_promate_L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/open_devices_promate"
                    android:textColor="@color/CORNSILK"
                    android:textSize="24sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:id="@+id/L2_camera_layout_R"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/camera_select_bg"
                android:focusable="true">

                <com.serenegiant.widget.UVCCameraTextureView
                    android:id="@+id/L2_camera_view_R"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/frame_image_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/L2_camera_view_R"
                    android:layout_alignLeft="@+id/L2_camera_view_R"
                    android:layout_alignRight="@+id/L2_camera_view_R"
                    android:layout_alignTop="@+id/L2_camera_view_R"
                    />

                <TextView
                    android:id="@+id/L2_camera_open_promate_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/open_devices_promate"
                    android:textColor="@color/CORNSILK"
                    android:textSize="24sp"
                    />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
